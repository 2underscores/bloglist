{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests",
      "program": "${workspaceFolder}/node_modules/.bin/cross-env",
      "args": [
        "NODE_ENV=test",
        "node",
        "--test"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeArgs": [
        "--inspect-brk"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}