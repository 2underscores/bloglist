{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "BE Server (Dev)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "console": "internalConsole", // "integratedTerminal" | "internalConsole" | "externalTerminal",
      "internalConsoleOptions": "openOnSessionStart" // "neverOpen" | "openOnSessionStart" | "openOnFirstSessionStart"
    },
    {
      "name": "BE Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:watch"
      ],
      // Test runners expect to be run from terminal and be a bit more interactive
      "console": "integratedTerminal", // "integratedTerminal" | "internalConsole" | "externalTerminal",
      "internalConsoleOptions": "neverOpen" // "neverOpen" | "openOnSessionStart" | "openOnFirstSessionStart"
    },
    {
      "name": "Web Server (Dev)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/bloglist-fe",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "console": "integratedTerminal", // "integratedTerminal" | "internalConsole" | "externalTerminal",
      "internalConsoleOptions": "neverOpen", // "neverOpen" | "openOnSessionStart" | "openOnFirstSessionStart"
      "env": {
        "NODE_OPTIONS": "--inspect" // Enables the Node debugger
      }
    },
  ]
}